<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grd_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.kdh.beacon.MenuActivity">

    <TextView
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowColor="#ba000000"
        android:textSize="90sp"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChecKhu"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.066"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowColor="#ba000000"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        android:id="@+id/gridLayout">

        <LinearLayout
            android:background="@drawable/round"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/chkBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/check_img" />

            <Button
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cd000000"
                android:text="출석체크" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/round"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/rcdBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/record_img" />

            <Button
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cd000000"
                android:text="출결기록" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/round"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/timeBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/table_img" />

            <Button
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cd000000"
                android:text="시간표" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/round"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/notiBtn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/noti_img" />

            <Button
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cd000000"
                android:text="공지사항" />
        </LinearLayout>

    </GridLayout>
</android.support.constraint.ConstraintLayout>
