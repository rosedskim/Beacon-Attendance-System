<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc910"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.project.kdh.beacon.NoticeActivity0">

    <TextView
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@drawable/brown_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ntcAddBtn"
            android:layout_margin="4dp"
            android:background="@drawable/brown_round"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등록" />

        <Button
            android:id="@+id/ntcModifyBtn"
            android:layout_margin="4dp"
            android:background="@drawable/brown_round"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정" />

        <Button
            android:id="@+id/ntcDeleteBtn"
            android:layout_margin="4dp"
            android:background="@drawable/brown_round"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제" />

    </LinearLayout>

    <ListView
        android:choiceMode="singleChoice"
        android:id="@+id/ntcListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:padding="5dp" />

</LinearLayout>
