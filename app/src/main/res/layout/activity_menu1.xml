<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu1"
    tools:context="com.project.kdh.beacon.MenuActivity1">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_round"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:clickable="false"
            android:id="@+id/chkBtn1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/check" />

        <ImageView
            android:clickable="false"
            android:id="@+id/rcdBtn1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/record" />

        <ImageView
            android:clickable="false"
            android:id="@+id/lctBtn1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/lecture" />

        <ImageView
            android:clickable="false"
            android:id="@+id/ntcBtn1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/notice" />
    </GridLayout>

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/menu1PrgBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
